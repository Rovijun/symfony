{% extends 'base.html.twig' %}

{% block title %}List of client{% endblock %}

{% block body %}
    <div class="row">
        <h1>The clients</h1>
    </div>

    <div class="row">
        {% for client in clients %}
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Name : {{ client.name }}</h2>
							<p class="card-text">E-mail : {{ client.email }}</p>
                            {% if client.conso < 2 %}
							    <p class="card-text">Consommation : {{ client.conso }} bière</p>
                            {% else %}
							    <p class="card-text">Consommation : {{ client.conso }} bières</p>
                            {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

