{% extends 'base.html.twig' %}

{% block sidebar %}
    Sidebar
{% endblock %}

{% block body %}
    <div class="row">
        <h1>The beers</h1>
    </div>

    <div class="row">
        {% for beer in beers %}
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Name :{{ beer.name }}</h2>
							<p class="card-text">Degree :{{ beer.degree }}</p>
							<p class="card-text">Date :{{ beer.publishedAt | date('d-m-y h:s:m') }}</p>
							<p class="card-text">Rating :{{ beer.rating }}</p>
							<img src="{{ asset('build/images/beer_00.jpeg') }}" />
							<p>{{ beer.description }}</p>
                            {% if beer.country %}
								<p>Country : {{ beer.country.name }}</p>
								<p class="text-primary">Address : {{ beer.country.address }}</p>
							{% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

