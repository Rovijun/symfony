{% extends 'base.html.twig' %}

{% block sidebar %}
    Sidebar
{% endblock %}

{% block body %}
    <div class="row">
        <h1>The beers</h1>
    </div>

    <div class="row">
        {% for beer in beers %}
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Name: {{ beer.name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Beer: {{ beer.degree }}&deg;</h6>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

