{% extends 'base.html.twig' %}

{% block title %} Hello beer {% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Name : {{ beer.name }}</h2>
                    <p class="card-text">Degree : {{ beer.degree }}</p>
                    <p class="card-text">Date : {{ beer.publishedAt | date('d-m-y h:s:m') }}</p>
                    <p class="card-text">Rating : {{ beer.rating }}</p>
                    <p class="card-text">Price : {{ beer.price }} $</p>
                    <img src="{{ asset('build/images/beer_00.jpeg') }}" />
                    <p>{{ beer.description }}</p>
                    {% if beer.status == 'unavailable' %}
                        <p class="text-danger">Status : {{ beer.status }}</p>
                    {% else %}
                        <p class="text-success">Status : {{ beer.status }}</p>
                    {% endif %}
                    <a href="{{ ('/') }}" class="btn btn-primary stretched-link">Retourner Ã  la page d'accueil</a>
            </div>
        </div>
    </div>

</div>
{% endblock %}